# OpenAI API Keys (можно указать несколько для ротации)
OPENAI_API_KEY_1=sk-...
OPENAI_API_KEY_2=sk-...  # опционально
OPENAI_API_KEY_3=sk-...  # опционально

# OpenAI Configuration
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
OPENAI_TRANSCRIPTION_MODEL=whisper-1
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Rate Limiting
OPENAI_RPM_LIMIT=200
OPENAI_RETRY_ATTEMPTS=3
OPENAI_RETRY_DELAY_MS=1000

# Audio Settings
AUDIO_SAMPLE_RATE=44100
AUDIO_CHANNELS=2
AUDIO_BUFFER_SIZE=4096

# Storage Paths
STORAGE_RECORDINGS_PATH=./Recordings
STORAGE_REPORTS_PATH=./Reports
STORAGE_TEMPLATES_PATH=./Templates
STORAGE_LOGS_PATH=./Logs

# Window Settings
WINDOW_OPACITY=0.9
WINDOW_ALWAYS_ON_TOP=false
WINDOW_DEFAULT_LANGUAGE=Russian

